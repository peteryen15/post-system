<!DOCTYPE html>
<html>
  <head>
    <%- include ("./partials/header") %>
    <title>註冊會員</title>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div>
      <h1>註冊會員</h1>
    </div>
    <%- include("./partials/message") %>
    <form action="/register" method="POST">
      <div>
        <label for="inputName">用戶名</label>
        <input
          type="text"
          id="inputName"
          name="name"
          minlength="2"
          maxlength="50"
          required
        />
        <br />
        <label for="inputEmail">信箱</label>
        <input
          type="email"
          id="inputEmail"
          name="email"
          minlength="6"
          maxlength="50"
          required
        />
        <br />
        <label for="inputPassword">密碼</label>
        <input
          type="password"
          id="inputPassword"
          name="password"
          minlength="8"
          maxlength="50"
          required
        />
        <br />
        <button>註冊</button>
      </div>
    </form>
  </body>
</html>
